<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.xiaochao.lcrapiddevelop">

    <uses-permission android:name="android.permission.INTERNET" />

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:name=".MyApplication.MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".UI.MainActivity" />
        <activity
            android:name=".UI.ListvView.ListvViewActivity"
            android:label="@string/title_activity_listv_view"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".UI.GridView.GridViewActivity"
            android:label="@string/title_activity_grid_view"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".UI.ListviewGrouping.ListviewGroupingActivity"
            android:label="@string/title_activity_grid_grouping_view" />
        <activity
            android:name=".UI.ChatLayout.ChatLayoutActivity"
            android:label="@string/title_activity_list_chat_view" />
        <activity
            android:name=".UI.Tab.TabActivity"
            android:label="@string/title_activity_tab" />
        <activity android:name=".UI.Video.VideoListActivity" />
        <activity
            android:name=".UI.WelcomeActivity"
            android:theme="@style/welcomeTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".UI.TypePage.TypePageActivity"
            android:label="@string/title_activity_type" />
        <activity
            android:name=".LoginActivity"
            android:label="@string/title_activity_login"></activity>
    </application>

</manifest>